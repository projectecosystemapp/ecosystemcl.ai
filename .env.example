# ECOSYSTEMCL.AI Environment Variables
# Copy this file to .env.local for local development

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Clerk Authentication (Optional - if using Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# AWS Configuration (Required for agent execution)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Redis Configuration (Required for job queue)
REDIS_URL=redis://localhost:6379

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
ECOSYSTEMCLI_API_URL=http://localhost:3000

# JWT Secret for device auth (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Optional: AI Model API Keys (if using directly instead of through platform)
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key

# Optional: GitHub Integration
GITHUB_CLIENT_ID=your_github_oauth_app_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_secret

# Build Configuration (for Amplify)
AMPLIFY_MONOREPO_APP_ROOT=packages/web
AMPLIFY_DIFF_DEPLOY=false